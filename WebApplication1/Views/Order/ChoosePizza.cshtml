@model List<Product>
@{
    var user = ViewBag.User as User;
}

<h2>Вибір піци</h2>

<p>Привіт, @user.Name! Ваш вік: @user.Age років.</p>

<form method="post" action="@Url.Action("Cart", "Order", new { name = user.Name, age = user.Age })">
    <ul>
        @for (int i = 0; i < Model.Count; i++)
        {
            <li>
                <strong>@Model[i].Name</strong> - @Model[i].Description - @Model[i].Price грн
                <label>
                    Кількість:
                    <input type="number" name="quantities[@i]" min="0" value="0" />
                </label>
            </li>
        }
    </ul>
    <button type="submit">Перейти до корзини</button>
</form>
